import pygame
import sys
from gun import RPG
import controls

def run():
    pygame.init()
    screen = pygame.display.set_mode((1920,1080))   #sizes
    pygame.display.set_caption('Battlefild 6')  #tite
    bg_color = (0, 0, 0)
    gun = RPG(screen)

    while True:
        controls.events(gun)
        screen.fill(bg_color)
        gun.output()
        gun.update_gun()
        gun.update_gun2()
        gun.mit()

        pygame.display.flip()



run()
